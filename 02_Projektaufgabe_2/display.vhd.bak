-- Library Declaration --
LIBRARY IEEE;
USE IEEE.std_logic_1164.ALL;
USE IEEE.numeric_std;

ENTITY display IS
PORT(

		countVal		:IN			INTEGER;

		--7-Segment --
		a				:OUT			std_logic;
		b				:OUT 			std_logic;
		c				:OUT			std_logic;
		d				:OUT			std_logic;
		e				:OUT			std_logic;
		f				:OUT 			std_logic;
		g				:OUT			std_logic
	);
END display;



--------------------------------------------
--        ARCHITECTURE	                  --
--------------------------------------------
ARCHITECTURE Behaviour OF display IS
	--Output of the number in binary
	b0					:std_logic; --LSB
	b1					:std_logic;
	b2					:std_logic;
	b3					:std_logic;  --MSB

	
-- Convert the value of counter to binary --
convert_bin : PROCESS (countVal)
	BEGIN
		case countVal IS
			--Counter = 0 --
			WHEN 0 =>
				b3 <= '0';
				b2 <= '0';
				b1 <= '0';
				b0 <= '0';
		
			--Counter = 1 --
			WHEN 1 =>
				b3 <= '0';
				b2 <= '0';
				b1 <= '0';
				b0 <= '1';
				
			--Counter = 2 --
			WHEN 2 =>
				b3 <= '0';
				b2 <= '0';
				b1 <= '1';
				b0 <= '0';
				
			--Counter = 3 --
			WHEN 3 =>
				b3 <= '0';
				b2 <= '0';
				b1 <= '1';
				b0 <= '1';
				
			--Counter = 4 --
			WHEN 4 =>
				b3 <= '0';
				b2 <= '1';
				b1 <= '0';
				b0 <= '0';
				
			--Counter = 5 --
			WHEN 5 =>
				b3 <= '0';
				b2 <= '1';
				b1 <= '0';
				b0 <= '1';
				
			--Counter = 6 --
			WHEN 6 =>
				b3 <= '0';
				b2 <= '1';
				b1 <= '1';
				b0 <= '0';
				
			--Counter = 7 --
			WHEN 7 =>
				b3 <= '0';
				b2 <= '1';
				b1 <= '1';
				b0 <= '1';
				
			--Counter = 8 --
			WHEN 8 =>
				b3 <= '1';
				b2 <= '0';
				b1 <= '0';
				b0 <= '0';
				
			--Counter = 9 --
			WHEN 9 =>
				b3 <= '1';
				b2 <= '0';
				b1 <= '0';
				b0 <= '1';
				
			WHEN others =>
		END CASE;
END PROCESS convert_bin;


END Behaviour;